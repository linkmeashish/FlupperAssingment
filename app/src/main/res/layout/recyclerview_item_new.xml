<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_5"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/view_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_row_background">

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="@dimen/ic_delete"
            android:layout_height="@dimen/ic_delete"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_add" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/product_photo"
            android:layout_width="@dimen/thumbnail"
            android:layout_height="@dimen/thumbnail"
            android:layout_marginRight="@dimen/activity_padding_horizontal"
            android:src="@drawable/onion"
            android:scaleType="centerCrop" />

        <TextView
            android:text="ksdnksndkfsndkfnskdf"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textSize_18sp"
            android:textStyle="bold"
            android:padding="@dimen/padding_2"
            android:id="@+id/product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/product_photo"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1" />

        <TextView
            android:layout_below="@+id/product_title"
            android:textSize="@dimen/textSize_16sp"
            android:textColor="@android:color/darker_gray"
            android:id="@+id/product_description"
            android:text="ksdnksndkfsndkfnskdfdsflknsdlkfnlskdnfklsdfklsndfknskdfnskdnfksdnfksndfkjsndfkjsndfkjnsdkjfnskdjfnkjsdfnkjsdnfk"
            android:textStyle="italic"
            android:padding="@dimen/padding_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/product_photo"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="2"/>

        <TextView
            android:maxLines="1"
            android:textColor="@android:color/darker_gray"
            android:ellipsize="end"
            android:padding="@dimen/padding_2"
            android:id="@+id/product_regularPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_description"
            android:textSize="@dimen/textSize_16sp"
            android:text="ksdnksndkfsndkfnskdfdsflknsdlkfnlskdnfklsdfklsndfknskdfnskdnfksdnfksndfkjsndfkjsndfkjnsdkjfnskdjfnkjsdfnkjsdnfk"
            android:textStyle="normal"
            android:layout_toRightOf="@id/product_photo"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/product_salePrice"
            android:maxLines="1"
            android:textColor="@android:color/darker_gray"
            android:ellipsize="end"
            android:padding="@dimen/padding_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_regularPrice"
            android:textSize="@dimen/textSize_16sp"
            android:text="ksdnksndkfsndkfnskdfdsflknsdlkfnlskdnfklsdfklsndfknskdfnskdnfksdnfksndfkjsndfkjsndfkjnsdkjfnskdjfnkjsdfnkjsdnfk"
            android:textStyle="normal"
            android:layout_toRightOf="@id/product_photo"
            android:fontFamily="sans-serif-medium" />
    </RelativeLayout>
</FrameLayout>